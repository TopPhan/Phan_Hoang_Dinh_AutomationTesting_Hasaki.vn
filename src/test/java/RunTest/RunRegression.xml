
<suite name="Hasaki Full Regression Suite" parallel="tests" thread-count="2">

    <listeners>
        <listener class-name="com.listener.Standard_Mode_Listener" />
    </listeners>

    <groups>
        <run>
            <include name="regression" />
            <include name="cleanup" />
        </run>
    </groups>

    <test name="Regression - Chrome" preserve-order="true">
        <parameter name="browserType" value="chrome" />
        <classes>
            <class name="testcases.LoginTest" />
            <class name="testcases.MyAddressTest" />
            <class name="testcases.SearchTest" />
            <class name="testcases.ProductDetailTest" />
                <methods>
                    <exclude name=""/>
                </methods>
            <class name="testcases.CartTest" />
            <class name="testcases.CheckoutTest" />
            <class name="testcases.LogoutTest" />
        </classes>
    </test>

    <test name="Regression - Edge" preserve-order="true">
        <parameter name="browserType" value="msedge" />
        <classes>
            <class name="testcases.LoginTest" />
            <class name="testcases.MyAddressTest" />
            <class name="testcases.SearchTest" />
            <class name="testcases.ProductDetailTest" />
            <class name="testcases.CartTest" />
            <class name="testcases.CheckoutTest" />
            <class name="testcases.LogoutTest" />
        </classes>
    </test>

</suite>